$vdoing-wrapper
  max-width $contentWidth
  margin 0 auto
  padding 1rem 2.5rem 2rem 2.5rem
  &:not(.footer)
    background var(--mainBg)
    box-shadow 0 4px 10px rgba(0, 2, 4, .06), 0 0 1px rgba(0, 2, 4, .11)
    margin-bottom 1rem
    border-radius 1em
  @media (max-width: $MQNarrow)
    padding 1rem 2rem
  @media (max-width: $MQMobileNarrow)
    padding 1rem 1.5rem
$wrapper
  max-width $contentWidth
